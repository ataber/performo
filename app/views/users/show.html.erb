<title><%= @user.name %></title>
<div class="container-fluid">
  <div class="row-fluid">
    <span class="span6">
      <section class="box">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <h4>
        <%= link_to "Edit profile", edit_user_path(@user) %>
      </h4>
      </section>
    </span>
    <span class="span6">
      <% if @user.performers.any? %>
        <section class="box">
        <h3>Listed Performers</h3>
        <ol class="performers">
          <%= render @performers %>
        </ol>
        <%= will_paginate @performers %>
      <% end %>
      </section>
    </span>
  </div>
</div>
